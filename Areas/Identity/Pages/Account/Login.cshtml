@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="container-fluid">
    <div class="row align-items-center" style="height: 100vh;">
        <!-- Left Section: Login Form -->
        <div class="col-md-6 bg-white p-5">
            <div class="text-center mb-5">
                <img src="/images/login-logo.jpg" alt="Bazaarly Logo" class="mb-3" style="width: 200px;" />
                <h2 class="font-weight-bold">Login to Your Account</h2>
                <p class="text-muted">Login using social networks</p>

                <!-- Social Media Login Buttons -->
                <div class="d-flex justify-content-center mb-4">
                    <button class="btn btn-light me-2">
                        <i class="fab fa-facebook-f"></i> <!-- Placeholder for Facebook -->
                    </button>
                    <button class="btn btn-light me-2">
                        <i class="fab fa-google"></i> <!-- Placeholder for Google -->
                    </button>
                    <button class="btn btn-light">
                        <i class="fab fa-linkedin-in"></i> <!-- Placeholder for LinkedIn -->
                    </button>
                </div>

                <p class="text-muted">OR</p>
            </div>

            <form id="account" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                <!-- Email Input -->
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" placeholder="Email" />
                    <label asp-for="Input.Email">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <!-- Password Input -->
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" placeholder="Password" />
                    <label asp-for="Input.Password">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <!-- Remember Me Checkbox -->
                <div class="form-check mb-3">
                    <input class="form-check-input" type="checkbox" asp-for="Input.RememberMe" />
                    <label asp-for="Input.RememberMe" class="form-check-label">Remember me</label>
                </div>

                <!-- Sign In Button -->
                <button id="login-submit" type="submit" class="btn btn-lg w-100" style="background-color: #c8a71f; color: white;">Sign In</button>

                <!-- Extra Links (Forgot password, Register) -->
                <div class="mt-3">
                    <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    <br />
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                    <br />
                    <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                </div>
            </form>
        </div>

        <!-- Right Section: Sign Up Suggestion -->
        <div class="col-md-6 text-center d-flex flex-column justify-content-center" style="background-color: #c8a71f; color: white;">
            <h2>New Here?</h2>
            <p>Sign up and discover a great amount of new opportunities!</p>
            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="btn btn-lg btn-light">Sign Up</a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
