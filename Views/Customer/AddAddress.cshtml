@model Bazaarly.Models.Addresses

@{
    ViewBag.Title = "Add Address";
}

<div class="container mt-5">
    <h2 class="mb-4" style="color: #c8a71f;">Add Address</h2>

    <form asp-action="AddAddress" method="post">
        <div class="form-group mb-3">
            <label asp-for="Street" class="form-label" style="color: black;">Street</label>
            <input asp-for="Street" class="form-control" style="border-color: #c8a71f;" />
            <span asp-validation-for="Street" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="City" class="form-label" style="color: black;">City</label>
            <input asp-for="City" class="form-control" style="border-color: #c8a71f;" />
            <span asp-validation-for="City" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="State" class="form-label" style="color: black;">State</label>
            <input asp-for="State" class="form-control" style="border-color: #c8a71f;" />
            <span asp-validation-for="State" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="ZipCode" class="form-label" style="color: black;">Zip Code</label>
            <input asp-for="ZipCode" class="form-control" style="border-color: #c8a71f;" />
            <span asp-validation-for="ZipCode" class="text-danger"></span>
        </div>

        <div class="form-group mb-4">
            <label asp-for="Country" class="form-label" style="color: black;">Country</label>
            <input asp-for="Country" class="form-control" style="border-color: #c8a71f;" />
            <span asp-validation-for="Country" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary" style="background-color: #c8a71f; color: white;">Add Address</button>
    </form>

    <div class="mt-3">
        <a asp-action="UsersAccount" style="color: #c8a71f;">Back to Account</a>
    </div>
</div>
