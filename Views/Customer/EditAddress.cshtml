@model Bazaarly.Models.Addresses

@{
    ViewBag.Title = "Edit Address";
}

<h2 style="color:#c8a71f;">Edit Address</h2>

<form asp-action="EditAddress" method="post">
    <input type="hidden" asp-for="AddressId" /> <!-- Add hidden field for AddressId -->

    <div class="form-group">
        <label asp-for="Street" class="control-label"></label>
        <input asp-for="Street" class="form-control" style="border-color:#c8a71f;" />
        <span asp-validation-for="Street" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="City" class="control-label"></label>
        <input asp-for="City" class="form-control" style="border-color:#c8a71f;" />
        <span asp-validation-for="City" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="State" class="control-label"></label>
        <input asp-for="State" class="form-control" style="border-color:#c8a71f;" />
        <span asp-validation-for="State" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ZipCode" class="control-label"></label>
        <input asp-for="ZipCode" class="form-control" style="border-color:#c8a71f;" />
        <span asp-validation-for="ZipCode" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Country" class="control-label"></label>
        <input asp-for="Country" class="form-control" style="border-color:#c8a71f;" />
        <span asp-validation-for="Country" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary" style="background-color:#c8a71f;">Update Address</button>
</form>

<div>
    <a asp-action="UsersAccount" style="color:#c8a71f;">Back to Account</a> <!-- Corrected action name -->
</div>
