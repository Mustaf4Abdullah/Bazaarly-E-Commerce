@model Bazaarly.Models.UserAccountViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml"; // Ensure you're using the main layout for consistency
}

<div class="container mt-5">
    <div class="row">
        <div class="col text-center">
            <h1 class="mb-4" style="color: #c8a71f;">Edit Profile</h1>
            <p class="lead" style="color: black;">Update your personal information below.</p>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-lg-6 offset-lg-3">
            <div class="card shadow-sm" style="border-color: #c8a71f;">
                <div class="card-body" style="background-color: white;">
                    <h4 class="card-title" style="color: black;">Personal Information</h4>

                    <form asp-action="UpdateProfile" method="post">
                        <div class="form-group">
                            <label for="UserName" style="color: black;">Username</label>
                            <input type="text" class="form-control" id="UserName" name="UserName" value="@Model.UserName" required />
                        </div>
                        <div class="form-group">
                            <label for="Email" style="color: black;">Email</label>
                            <input type="email" class="form-control" id="Email" name="Email" value="@Model.Email" required />
                        </div>
                        <div class="text-center mt-4">
                            <button type="submit" class="btn btn-primary" style="background-color: #c8a71f; color: white;">Save Changes</button>
                            <a class="btn btn-secondary" style="background-color: #c8a71f; color: white;" href="@Url.Action("UsersAccount", "Customer")">Home</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
